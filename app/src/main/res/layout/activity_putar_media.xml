<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="asus.example.com.tubes_android_semester5.putar_media">
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Putar Audio"
        android:id="@+id/btn_putar_audio"
        android:onClick="btn_putar_audio"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Putar Video"
        android:id="@+id/btn_putar_video"/>

</LinearLayout>
